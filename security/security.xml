<odoo>
<data noupdate="0">

    <record id="lfx_expense_ticket_module" model="ir.module.category">
        <field name="name">Expense ticket access</field>
        <field name="description">User access level for Expense ticket</field>
        <field name="sequence">40</field>
    </record>

    <record id="group_expense_ticket" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="lfx_expense_ticket.lfx_expense_ticket_module"/>
        <field name="users" eval="[(4, ref('base.user_root'))]"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user') )]"/>
    </record>

    <record id="expense_ticket_comp_rule" model="ir.rule">
        <field name="name">expense_ticket multi-company</field>
        <field name="model_id" ref="model_lfx_expense_ticket"/>
        <field name="global" eval="True"/>
        <field name="domain_force">['|',('company_id','=',False),('company_id','child_of',[user.company_id.id])]</field>
    </record>

    <record id="account.group_account_invoice" model="res.groups">
        <field name="implied_ids" eval="[(4, ref('group_expense_ticket'))]"/>
    </record>

<!-- not needed
    <record id="mail.mail_followers_read_write_own" model="ir.rule">
        <field name="groups" eval="[(4, ref('group_expense_ticket'))]"/>
    </record>
-->
    <record id="account.menu_finance" model="ir.ui.menu">
        <field name="groups_id" eval="[(4, ref('group_expense_ticket'))]"/>
    </record>
    <record id="account.menu_finance_payables" model="ir.ui.menu">
        <field name="groups_id" eval="[(4, ref('group_expense_ticket'))]"/>
    </record>


